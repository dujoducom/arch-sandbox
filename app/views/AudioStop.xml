<Alloy>
	<Model src="audioStops" id="stopModel" instance="true" />
	
	<Window id="AudioStop" title="{$.stopModel.stopName}" class="container" backButtonTitle="Back">	
		
		<View class="container" layout="vertical">
			
			<ScrollView id="stopDescriptionScroll" height="75%" width="100%" showVerticalScrollIndicator="true" layout="vertical">
								
				<ScrollableView id="stopImagesScroll" showPagingControl="false" height="205" width="100%">
					<ImageView image="{$.stopModel.stopImage}" id="imgStopCover" width="Titanium.UI.SIZE" top="10" bottom="10" left="10" right="10" />
				</ScrollableView>
				
				<!--
				<ScrollView id="stopImagesScrollView" layout="horizontal" showHorizontalScrollIndicator="true" height="200" width="100%">
					<ImageView image="{$.stopModel.stopImage}" id="imgStopCover" />
				</ScrollView>
				-->
				
				<Label id="audioStopLabel" textAlign="left" height="Titanium.UI.SIZE" width="80%" top='25' bottom='15' html="{$.stopModel.stopDescription}" />
				
			</ScrollView>
			
			<View id="stopPlayerView" layout="vertical" height="25%" width="100%" bottom="0">
				
				<View width="Titanium.UI.FILL" height="Titanium.UI.SIZE">
					<Label id="sliderAudioPosition" top="10" text=""  />
					<Slider id="audioSlider" top="10" min="0" max="100" value="0" onChange="updateLabel"/>
					<Label id="sliderAudioDuration" top="10" text="" />
				</View>
				
				<View width="Titanium.UI.FILL" height="Titanium.UI.FILL" top="10">
					<View layout="horizontal" width="Titanium.UI.SIZE" height="Titanium.UI.FILL">
						
						<ImageView id="btnVolume" image="/btnVolume.png" onClick="volumeButton" height="60%" />
						<ImageView id="btnBack" image="/btnStart.png" left="15" onClick="startButton" height="60%" />
						<View left="15" width="Titanium.UI.SIZE" height="Titanium.UI.SIZE">
							<ImageView id="btnPause" image="/pauseButton.png" onClick="playButton" height="75%" />
							<ImageView id="btnPlayPause" image="/playButton.png" onClick="playButton" height="75%" />
						</View>
						<ImageView id="btnHome" image="/btnClose.png" left="15" onClick="backButton" height="60%" />
						<!--<Button title="BACK" class="defaultButton" onClick="backButton" />-->
					</View>
				</View>
				
			</View>
			
		</View>
	</Window>
</Alloy>